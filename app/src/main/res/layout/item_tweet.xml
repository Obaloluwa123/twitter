<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#FAFCFD">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivProfileImage"
        android:layout_marginStart="17dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="David1234" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvScreenName"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="Hello Twitter!" />

    <ImageView
        android:id="@+id/rvImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBody"
        android:layout_alignStart="@+id/tvBody"
        android:layout_alignEnd="@+id/tvBody"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="-52dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/rTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvScreenName"
        android:layout_alignBottom="@+id/tvScreenName"
        android:layout_alignParentRight="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="179dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/tvScreenName"
        android:text="timeStamp" />

    <ImageView
        android:id="@+id/reTweet"
        android:layout_width="30dp"
        android:layout_height="31dp"
        android:layout_below="@id/rvImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="3dp"
        app:srcCompat="@drawable/ic_vector_retweet" />

    <ImageView
        android:id="@+id/likeButton"
        android:layout_width="30dp"
        android:layout_height="31dp"
        android:layout_below="@id/rvImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/ic_vector_heart" />

    <ImageView
        android:id="@+id/shareButton"
        android:layout_width="30dp"
        android:layout_height="31dp"
        android:layout_below="@id/rvImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="227dp"
        android:layout_marginTop="1dp"
        app:srcCompat="@android:drawable/ic_menu_share"
        tools:srcCompat="?attr/actionModeShareDrawable" />

</RelativeLayout>